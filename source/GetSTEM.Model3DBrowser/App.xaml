<?xml version="1.0" encoding="utf-8"?>
<Application 
    x:Class="GetSTEM.Model3DBrowser.App" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:framework="clr-namespace:GetSTEM.Model3DBrowser.Framework" 
    StartupUri="Views/MainWindow.xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d">
    <Application.Resources>
        
        
        
        <framework:ViewModelLocator x:Key="Locator" d:IsDataSource="True"/>

        <RadialGradientBrush 
            x:Key="DefaultBackground"
            Center=".5,.8" GradientOrigin=".5,.8" RadiusX=".5" RadiusY=".3">
            <GradientStop Offset="0" Color="#FFFFFF"/>
            <GradientStop Offset="1" Color="#999999"/>
        </RadialGradientBrush>

        <Style TargetType="TextBlock" x:Key="Label">
            <Setter Property="Foreground" Value="#EECCCCCC"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <Style TargetType="Button" x:Key="StandardButton">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Margin" Value="2"/>
        </Style>


    </Application.Resources>
</Application>